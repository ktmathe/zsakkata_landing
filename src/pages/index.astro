---
import BaseLayout from "../layouts/BaseLayout.astro"
import ArticleWithImgOnSide from "../components/ArticleWithImgOnSide.astro"
import Reviews from "../components/Reviews.astro"
import ArticleBoxes from "../components/ArticleBoxes.astro"
const pageTitle = "Zsák Kata - önazonos és támogató kommunikáció"
const intro = (await Astro.glob('./articles/intro.md'))[0].frontmatter
const szolgaltatasokCards = await Astro.glob('../pages/szolgaltatasokCards/*.md')
const about = (await Astro.glob('./articles/about.md'))[0].frontmatter
const workshops = (await Astro.glob('./articles/workshops.md'))[0].frontmatter
const business = (await Astro.glob('./articles/business.md'))[0].frontmatter
const reviews = await Astro.glob('../pages/reviews/*.md')
---
<BaseLayout pageTitle={pageTitle}>
<ArticleBoxes cards={szolgaltatasokCards} title="Mit tudunk együtt csinálni?"/>
<ArticleWithImgOnSide frontmatter={about}/>
<ArticleWithImgOnSide frontmatter={workshops}/>
<ArticleWithImgOnSide frontmatter={business}/>
<Reviews reviews={reviews} />
</BaseLayout>
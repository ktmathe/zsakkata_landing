<div id="mc_embed_shell">
    <link href="//cdn-images.mailchimp.com/embedcode/classic-061523.css" rel="stylesheet" type="text/css">

<div id="mc_embed_signup">
    <form action="https://gmail.us16.list-manage.com/subscribe/post?u=40734118594aca5ff19324bea&amp;id=a0d79ed0de&amp;f_id=00dcc2e1f0" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank">
        <div id="mc_embed_signup_scroll">
            <h2>Iratkozz fel a hírlevélre!</h2>
            <div class="mc-field-group">
                <label for="mce-EMAIL">Email cím <span class="asterisk">*</span></label>
                <input type="email" name="EMAIL" class="required email" id="mce-EMAIL" required="" value="">
            </div>
            <div class="mc-field-group">
                <label for="mce-FNAME">Keresztnév </label>
                <input type="text" name="FNAME" id="mce-FNAME" value="">
            </div>
            <div id="mce-responses">
                <div id="mce-error-response" style="display: none; color: red;">Érvénytelen email!</div>
                <div id="mce-success-response" style="display: none; color: green;">Sikeres feliratkozás!</div>
            </div>
            <div aria-hidden="true" style="position: absolute; left: -5000px;">
                /* real people should not fill this in and expect good things - do not remove this or risk form bot signups */
                <input type="text" name="b_40734118594aca5ff19324bea_a0d79ed0de" tabindex="-1" value="">
            </div>
            <div class="optionalParent">
                <div>
                    <input type="submit" name="subscribe" id="mc-embedded-subscribe" value="Feliratkozás">
                </div>
            </div>
        </div>
    </form>
</div>

<style type="text/css">
    #mc_embed_signup{
        margin: auto;
        width: 350px;
        padding: 1em;
    }

    .mc-field-group {
        text-align: center;
    }
    
    #mce-responses{
        width: 100%;
    }

    #mce-error-response, #mce-success-response{
        font-size: .8em;
        font-weight: normal;
        width: 100%;
    }

    #mc_embed_signup_scroll h2{
        text-align: center;
    }

    #mc-embedded-subscribe{
        font-size: 1.5rem;
        background-color: #ba8f78;
        color: white; 
        text-shadow: 2px 5px 10px rgba(0, 0, 0, 0.3);
        text-transform: uppercase;
        text-decoration: none;
        border: none;
        border-radius: 50px;
        padding: 10px 40px 10px 40px;
        box-shadow: 2px 5px 10px rgba(0, 0, 0, 0.3);
        cursor: pointer;
        margin: 40px 0 20px 0;
    }
</style>

<script is:inline>
    document.getElementById('mc-embedded-subscribe').addEventListener('click', function(e) {
        e.preventDefault();
        var email = document.getElementById('mce-EMAIL').value;
        if (validateEmail(email)) {
            document.getElementById('mc-embedded-subscribe-form').submit();
        } else {
            var errorMsg = document.getElementById('mce-error-response');
            errorMsg.style.display = 'block';
        }
    });

    document.getElementById('mc-embedded-subscribe-form').addEventListener('submit', function() {
        var successMsg = document.getElementById('mce-success-response');
        successMsg.style.display = 'block';
        var errorMsg = document.getElementById('mce-error-response');
        errorMsg.style.display = 'none';
    });
    
    function validateEmail(email) {
        var re = /\S+@\S+\.\S+/;
        return re.test(email); 
    }
</script>

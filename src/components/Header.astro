---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
---
<header class="header">
<nav>
    <Hamburger />
    <Navigation />
</nav>
    <div class="text-box">
        <h1 class="heading-primary">
            <span class="heading-primary-main">Zsák Kata</span>
            <span class="heading-primary-sub">Önazonos és támogató kommunikáció</span>
        </h1>
        <a href="/rolam#rolam" class="btn">Ismerj meg!</a>
    </div>
</header>

<style>


.header {
    position: relative;
    height: 95vh;
    background-image: 
    linear-gradient(
        to left,
        rgba(255, 255, 255, 0),
        rgba(255, 250, 250, 0) 15%,
        rgba(255, 250, 250) 55%),
        url('/header2.webp');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 62% 50%;
}

.text-box {
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-67%, -50%);
    text-align: center;
}

.heading-primary {
    text-transform: uppercase;
    text-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
}

.heading-primary-main {
    display: block;
    font-size: 1.5rem;
    font-weight: 500;
    letter-spacing: 25px;
    margin-bottom: 1em;
    animation: fadeIn 0.5s ease-in;
}

.heading-primary-sub {
    display: block;
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 10.3px;
    animation: fadeIn 0.5s ease-in 0.3s;
    animation-fill-mode: backwards;
}

.btn{
    font-size: 1.2em;
    padding: 1em 2.5em;
    animation: fadeIn 0.5s ease-in 0.7s;
    animation-fill-mode: backwards;
}

@media screen and (min-width: 1100px) {

.header {
    height: 97vh;
    max-height: 1080px;
    background-image: 
        linear-gradient(
            to left,
            rgba(255, 255, 255, 0),
            rgba(255, 250, 250, 0) 50%,
            rgba(255, 250, 250) 65%),
        url('/header2.webp');
    background-size: contain;
    background-position: top right;
        
}

.text-box {
    transform: translate(-80%, -50%);
}

.heading-primary-main {
    font-size: 3.5rem;
    letter-spacing: 35px;
}

.heading-primary-sub {
    font-size: 1.5rem;
    letter-spacing: 14.3px;
}

}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
</style>

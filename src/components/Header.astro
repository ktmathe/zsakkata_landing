---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
---
<section>
<nav>
    <Hamburger />
    <Navigation />
</nav>
<div class="container">
    <picture>
        <source srcset="/header_small.webp" media="(max-width: 600px)">
        <source srcset="/header.webp" >
        <img src="/header.webp" alt="Zsák Kata">
    </picture>
    <div class="hero-text">
        <h1>Zsák Kata</h1>
        <h2>Önazonos és támogató kommunikáció</h2>
    </div>
</div>
</section>

<style>

.container {
    padding: 0;
    position: relative;
    text-align: center;
    margin-bottom: 30px;
}

.container img{
    object-fit: cover;
    width: 100%;
    height: 350px;
}

.hero-text {
    text-align: left;
    position: absolute;
    top: 45%;
    width: 100%;
    padding: 5px 20px;
    color: #74513e;
    background-color: #fdffffb6;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2); 
}

.hero-text h1 {
    font-size: 2.5rem;
}

.hero-text h2 {
    font-size: 1.0rem;
}


@media screen and (min-width: 1200px) {
    .hero-text {
        top: 57%;
        padding: 10px 350px;
    }
     
    .hero-text h1 {
        font-size: 3.5rem;
    }
    
    .hero-text p {
        font-size: 2.0rem;
    }

    .container img{
        width: 100%;
        height: 720px;
    }  
}
</style>

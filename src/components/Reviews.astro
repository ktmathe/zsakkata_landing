---
const {reviews} = Astro.props
---
<div class="reviewContainer">
    <div class="reviewHeader">Vélemények</div>
    <div class="reviewGrid">
        {reviews.map((review) => (
            <div class="reviewCard">

                <div class=reviewImage>
                    <img src={review.frontmatter.image.url} alt={review.frontmatter.image.alt} />
                </div>   
                <div class="reviewName">
                    <Fragment set:html={review.frontmatter.name} />
                </div>
                <div class=reviewDescription>
                    <p> 
                        <Fragment set:html={review.frontmatter.review} />
                    </p>
                </div>    
                <div class="fivestar"></div>
            </div>            
        ))}
    </div>
</div>
<style>

.reviewContainer {
    margin-top: 5em;
}

.reviewGrid {        
        display: flex;
        justify-content: center;
        flex-direction: column;
    }

.fivestar{
    background-image: url("/fivestar.svg");
    background-repeat: no-repeat;
    background-position: center;
    height: 50px;
    margin-top: auto;

}

.reviewCard {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 2em;
    padding: 1em;
    border-radius: 20px;
    box-shadow: 0 0 10px 0 rgba(0,0,0,0.1);
    background-color: #f7e5ddb6;
}

.reviewHeader, .reviewImage, .reviewDescription, .fivestar, .reviewContainer {
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: 80%;
}

.reviewHeader {
    text-align: center;
    display: block;
    margin-bottom: 2em;
    font-size: 2.5em;
    line-height: 0.5em;
    font-weight: bold;
}

.reviewName {
    text-align: center;
    display: block;
    margin-bottom: 1em;
    font-size: 1.5em;
    font-weight: bold;
}

.reviewImage {
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 1em;
    width: 80%;
    max-width: 40%;
}

.reviewImage img {
    width: 100%;
    border-radius: 20px;
    display: block;
} 

.reviewDescription {
    font-size: 1.0em;
    line-height: 1.5em;
} 

@media screen and (min-width: 1395px) {
    .reviewGrid {        
        display: flex;
        justify-content: center;
        flex-direction: row;
    }

    .reviewCard {
        width: 400px;
        margin-left: 20px;
        margin-right: 20px;
    }
}

</style>